<div class="container">
  <div style="margin-top:30px;">
    <div class="row d-flex justify-content-center align-items-center font-weight-bold" style="font-size:20px; height:40px; width:150px;">会員情報編集</div>
  </div>

<div class="col-12" style="margin-left:40px;">
  <%= form_with model: @customer, url: public_customer_path, method: :patch do |f| %>
    <div class="form-group form-inline row font-weight-bold" style="margin-top:30px;">
      <%= f.label :ヘッダー画像, class: "col-4 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.file_field :header_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold" style="margin-top:45px;">
      <%= f.label :プロフィール画像, class: "col-4 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.file_field :avater_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold" style="margin-top:45px;">
      <%= f.label :名前, class: "col-4 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.text_field :name, class: "col-auto form-control form-control-lg w-50" %>
      </div>
    </div>

    <div class="form-group form-inline row font-weight-bold" style="margin-top:30px;">
      <%= f.label :自己紹介, class: "col-4 d-flex justify-content-start" %>
      <div class="field col-7">
        <%= f.text_area :introduction, class: "col-auto form-control form-control-lg w-50" %>
      </div>
    </div>

    <div class="row d-flex justify-content-center col-11" style="margin-top:70px;">
      <%= f.submit "編集内容を保存", class: "btn btn-success btn-lg font-weight-bold", style: "width:220px; height:50px;" %>
    </div>
  <% end %>
</div>
</div>